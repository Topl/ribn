{
    "env": {
        // access required global variables 
        "browser": true,
        "es2021": true,
        "node": true,
        "worker": true,
        "commonjs": true,
        "webextensions": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "requireConfigFile": false
    },
    "parser": "@babel/eslint-parser",
    "plugins": [
        "@babel"
    ],
    "rules": {
        // disallow use of undeclared variables
        "no-undef": "error",
        "quotes": [
            "error",
            "double",
            {
                "allowTemplateLiterals": true
            }
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "valid-jsdoc": [
            "error",
            {
                "prefer": {
                    "return": "returns"
                }
            }
        ],
        "max-len": 0,
        "no-invalid-this": 0,
        "@babel/new-cap": "error",
        "@babel/no-unused-expressions": "error",
        "@babel/object-curly-spacing": "error",
        "@babel/semi": "error"
    }
}